{
    "manifest_version": 3,
    "name": "Horizontal scroll",
    "version": "0.0.3",
    "description": "Scroll pages horizontally",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "16.png",
            "32": "32.png",
            "64": "64.png",
            "128": "128.png"
        }
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "16.png",
        "32": "32.png",
        "64": "64.png",
        "128": "128.png"
    }
}